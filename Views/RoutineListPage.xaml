<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Views.RoutineListPage"
             Title="Routine List">

    <Grid 
        Padding="5"
        RowDefinitions="*, 50"
        ColumnDefinitions="*">
        <ListView 
            Grid.Row="0"
            Grid.Column="0"
            x:Name="listRoutines" 
            BackgroundColor="Transparent"
            SeparatorColor="Silver"
            RowHeight="50"
            ItemSelected="listRoutines_ItemSelected"
            ItemTapped="listRoutines_ItemTapped"
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell 
                        Text="{Binding Name}"
                        Detail="{Binding OrderSlot}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <Button 
            Grid.Row="1"
            Grid.Column="0"
            x:Name="btnAdd" 
            Text="Add Routine" 
            Clicked="btnAdd_Clicked">

        </Button>
    </Grid>
</ContentPage>