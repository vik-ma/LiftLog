<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Views.RoutineListPage"
             Title="Routine List">
    <VerticalStackLayout Spacing="5">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnEditRoutineList" Clicked="btnEditRoutineList_Clicked" Text="Edit Routine List"></Button>
        <Button x:Name="btnAddRoutine" Clicked="btnAddRoutine_Clicked" Text="Add Routine"></Button>
        <Button x:Name="btnEditRoutine" Clicked="btnEditRoutine_Clicked" Text="Edit Routine"></Button>
    </VerticalStackLayout>
</ContentPage>