<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Views.RoutineListPage"
             Title="Routine List">
    
    <ListView 
        x:Name="listRoutines" 
        BackgroundColor="Transparent"
        SeparatorColor="Silver"
        RowHeight="50"
        ItemSelected="listRoutines_ItemSelected"
        ItemTapped="listRoutines_ItemTapped"
        >
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell 
                    Text="{Binding Name}"
                    Detail="{Binding OrderSlot}"></TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        
    </ListView>
    
