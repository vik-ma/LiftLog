<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.WorkoutTemplateListPopupPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WorkoutViewModel">

    <Border 
        BackgroundColor="White">
        <VerticalStackLayout 
            Spacing="20"
            Padding="30">
            <ListView
                Margin="0, 10"
                SelectionMode="Single"
                ItemsSource="{Binding WorkoutTemplateList}"
                ItemSelected="OnWorkoutTemplateItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:WorkoutTemplate">
                        <ViewCell>
                            <Label 
                                Text="{Binding Name}"
                                Style="{StaticResource ListViewLabelStyle}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button 
                Text="Close" 
                Command="{Binding ClosePopupCommand}" />
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>