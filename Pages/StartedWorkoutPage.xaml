<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.StartedWorkoutPage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:StartedWorkoutViewModel"
             Title="Started Workout">
    <VerticalStackLayout HorizontalOptions="Center">
        <VerticalStackLayout>
            <HorizontalStackLayout Spacing="15">
                <Label 
                    Text="Workout:"
                    FontSize="30"
                    FontAttributes="Bold" />
                <Label 
                    Text="{Binding WorkoutTemplate.Name}"
                    FontSize="30"
                    Style="{StaticResource MediumBlueBoldTextStyle}" />
                <Button 
                    Text="Modify Workout"
                    Style="{StaticResource GenericButtonStyle}"
                    Command="{Binding GoToWorkoutTemplateDetailsCommand}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="15">
                <DatePicker 
                    MinimumDate="12/01/2023"
                    MaximumDate="12/31/2023"
                    Date="{Binding SelectedDate}" />
                <Label 
                    Text="{Binding CompletedWorkout.Date}"
                    FontSize="16"
                    TextColor="{DynamicResource DeepBlue}"
                    VerticalOptions="Center" />
                <Button
                    Text="Set Date"
                    Style="{StaticResource GenericButtonStyle}"
                    Command="{Binding SaveDateCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <CollectionView
                ItemsSource="{Binding SetList}"
                HorizontalOptions="Center">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout 
                        ItemSpacing="3"
                        Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SetTemplate">
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Label 
                                    Text="{Binding ExerciseName}"
                                    FontSize="20"
                                    VerticalOptions="Center"
                                    Style="{StaticResource OrangeBoldTextStyle}" />
                                <Label
                                    Text="{Binding Note}"
                                    TextColor="{DynamicResource DarkGray}"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding Note}" />
                                <Button 
                                    Text="Edit Set"
                                    Style="{StaticResource GenericButtonStyle}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:StartedWorkoutViewModel}}, Path=GoToCreateSetTemplatePageCommand}" 
                                    CommandParameter="{Binding Id}" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="Weight:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingWeight}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingWeight}" />
                                <Label
                                    Text="Reps:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingReps}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingReps}" />
                                <Label
                                    Text="RIR:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingRir}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingRir}" />
                                <Label
                                    Text="RPE:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingRpe}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingRpe}" />
                                <Label
                                    Text="Time:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingTime}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingTime}" />
                                <Label
                                    Text="Distance:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingDistance}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingDistance}" />
                                <Label
                                    Text="Resistance Level:"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsTrackingCardioResistance}" />
                                <Entry
                                    Style="{StaticResource ExtraSmallEntryFieldStyle}"
                                    IsVisible="{Binding IsTrackingCardioResistance}" />
                                <Label
                                    Text="Warmup Set"
                                    TextColor="{DynamicResource DarkGray}"
                                    FontAttributes="Italic"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsWarmupSet}" />
                                <Label
                                    Text="Includes Body Weight"
                                    TextColor="{DynamicResource DarkGray}"
                                    FontAttributes="Italic"
                                    Style="{StaticResource StartedWorkoutLabelStyle}"
                                    IsVisible="{Binding IsUsingBodyWeightAsWeight}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Label 
                                Text="Set List Is Empty!" 
                                FontSize="18" 
                                FontAttributes="Bold" 
                                HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Button 
                Text="Go Back"
                Style="{StaticResource LargeButtonStyle}"
                Command="{Binding GoBackCommand}"
                Margin="50" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>