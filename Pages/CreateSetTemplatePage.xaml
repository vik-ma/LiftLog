<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.CreateSetTemplatePage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WorkoutDetailsViewModel"
             Title="Create Set Template">
    <VerticalStackLayout>
        <Grid 
            RowDefinitions="*, *"
            ColumnDefinitions="*, Auto"
            Padding="10"
            ColumnSpacing="20"
            HorizontalOptions="Center">
            <VerticalStackLayout 
                Grid.Row="0"
                Grid.Column="0"
                x:DataType="models:SetTemplate">
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track Weight"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track Reps"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track RIR"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track RPE"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track Time"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track Distance"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Track Cardio Resistance Level"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label 
                        Text="Add Body Weight To Weight"
                        VerticalOptions="Center"
                        FontSize="20"
                        FontAttributes="Bold" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <ListView
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding ExerciseList}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Exercise">
                        <ViewCell>
                            <Label Text="{Binding Name}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>