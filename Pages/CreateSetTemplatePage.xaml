<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.CreateSetTemplatePage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WorkoutDetailsViewModel"
             Title="Create Set Template">
    <VerticalStackLayout>
        <Grid 
            RowDefinitions="*, *"
            ColumnDefinitions="*, Auto"
            Padding="10"
            ColumnSpacing="20"
            HorizontalOptions="Center">
            <Button 
                Grid.Row="0"
                Grid.Column="0"
                Text="Show Exercise List"
                VerticalOptions="Center"
                Style="{StaticResource GenericButtonStyle}"
                Command="{Binding DisplayExerciseListCommand}"/>
            <ListView
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding ExerciseList}"
                IsVisible="{Binding ShowExerciseList}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Exercise">
                        <ViewCell>
                            <Label Text="{Binding Name}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>