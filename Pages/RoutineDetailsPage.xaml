<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.RoutineDetailsPage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:converters="clr-namespace:LocalLiftLog.Converters"
             x:DataType="viewmodel:RoutineDetailsViewModel"
             Title="RoutineDetailsPage">

    <ContentPage.Resources>
        <converters:EmptyStringToEmptyTextConverter x:Key="emptyStringToEmptyText" />
    </ContentPage.Resources>

    <VerticalStackLayout 
        Spacing="15"
        Padding="15">
        <Label 
            Text="{Binding Routine.Name}"
            FontSize="36"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Routine.Focus, Converter={StaticResource emptyStringToEmptyText}, ConverterParameter=Focus}"
            FontSize="26"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Routine.LastUpdateDateTime}"
            FontSize="26"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Go Back"
            FontSize="24"
            FontAttributes="Bold"
            Command="{Binding GoBackCommand}"
            Margin="5"
            WidthRequest="300" />
    </VerticalStackLayout>
</ContentPage>