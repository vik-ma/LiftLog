                    <CollectionView
                        Grid.Row="13"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=6}"
                        ItemsSource="{Binding Day7WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 8"
                        Grid.Row="0"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=7}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=7}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="7" />
                    <CollectionView
                        Grid.Row="1"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=7}"
                        ItemsSource="{Binding Day8WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 9"
                        Grid.Row="2"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=8}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="2"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=8}"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="8" />
                    <CollectionView
                        Grid.Row="3"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=8}"
                        ItemsSource="{Binding Day9WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 10"
                        Grid.Row="4"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=9}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="4"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=9}"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="9" />
                    <CollectionView
                        Grid.Row="5"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=9}"
                        ItemsSource="{Binding Day10WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 11"
                        Grid.Row="6"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=10}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="6"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=10}"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="10" />
                    <CollectionView
                        Grid.Row="7"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=10}"
                        ItemsSource="{Binding Day11WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 12"
                        Grid.Row="8"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=11}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="8"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=11}"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="11" />
                    <CollectionView
                        Grid.Row="9"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=11}"
                        ItemsSource="{Binding Day12WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 13"
                        Grid.Row="10"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=12}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="10"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=12}"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="12" />
                    <CollectionView
                        Grid.Row="11"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=12}"
                        ItemsSource="{Binding Day13WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <Label 
                        Text="Day 14"
                        Grid.Row="12"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=13}"
                        Style="{StaticResource MediumBoldLabelStyle}" />
                    <Button 
                        Text="Add Workout"
                        Grid.Row="12"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=13}"
                        Style="{StaticResource ExtraSmallGreenButtonStyle}"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
                        CommandParameter="13" />
                    <CollectionView
                        Grid.Row="13"
                        Grid.Column="2"
                        IsVisible="{Binding WorkoutRoutine.NumDaysInSchedule, Converter={StaticResource IntAboveThresholdConverter}, ConverterParameter=13}"
                        ItemsSource="{Binding Day14WorkoutTemplatePackageList}"
                        ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                        ItemTemplate="{StaticResource ScheduleCollectionViewDataTemplate}">
                        <CollectionView.EmptyView>
                            <Label Text="No Workout(s) Set" />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>

                <Grid 
                    Grid.Column="1"
                    Margin="50, 0"
                    HorizontalOptions="End"
                    IsVisible="{Binding ShowWorkoutTemplateList}"
                    Padding="10"
                    BackgroundColor="{DynamicResource VeryLightGray}">
                    <VerticalStackLayout>
                        <Label 
                            Text="Add Workout To:"
                            FontAttributes="Bold"
                            FontSize="24" />
                        <Label 
                            Text="{Binding SelectedDay, Converter={StaticResource DayConverter}, ConverterParameter=Custom}"
                            FontSize="28"
                            Style="{StaticResource MediumBlueBoldTextStyle}"
                            HorizontalOptions="Center"/>

                        <CollectionView
                            ItemsSource="{Binding WorkoutTemplateList}"
                            HorizontalOptions="Center"
                            Margin="0, 10">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout 
                                    ItemSpacing="8"
                                    Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:WorkoutTemplate">
                                    <Grid 
                                        ColumnDefinitions="Auto, *"
                                        ColumnSpacing="15">
                                        <Label 
                                            Grid.Column="0"
                                            Text="{Binding Name}"
                                            FontSize="28"
                                            FontAttributes="Bold"
                                            HorizontalOptions="Start" />
                                        <Button
                                            Grid.Column="1"
                                            Text="Add"
                                            HorizontalOptions="End"
                                            Style="{StaticResource ExtraSmallGreenButtonStyle}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=AddWorkoutTemplateCollectionToDayCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <ContentView>
                                    <VerticalStackLayout>
                                        <Label 
                                            Grid.Row="0"
                                            Text="No Workouts Created!" 
                                            FontSize="18" 
                                            FontAttributes="Bold" 
                                            TextColor="{DynamicResource MediumDarkGray}" />
                                    </VerticalStackLayout>
                                </ContentView>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                        VerticalOptions="End"
                        Spacing="20">
                        <Button 
                            Grid.Row="1"
                            Text="Create Workout"
                            Style="{StaticResource SmallButtonStyle}"
                            BackgroundColor="{DynamicResource MediumBlue}"
                            Command="{Binding GoToWorkoutTemplateCommand}" />
                        <Button 
                            Style="{StaticResource SmallButtonStyle}"
                            Text="Close"
                            Command="{Binding HideWorkoutTemplateListCommand}"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <VerticalStackLayout
                HorizontalOptions="Center"
                Spacing="5"
                Margin="10">
                <HorizontalStackLayout 
                    HorizontalOptions="Center" 
                    IsVisible="{Binding WorkoutRoutine.IsScheduleWeekly, Converter={StaticResource InvertedBoolConverter}}"
                    Spacing="10">
                    <Label
                        Text="{Binding WorkoutRoutine.CustomScheduleStartDate}"
                        TextColor="{DynamicResource MediumBlue}"
                        Style="{StaticResource LargeBoldLabelStyle}" />
                    <DatePicker
                        Format="yyyy-MM-dd"
                        Date="{Binding WorkoutRoutine.CustomScheduleStartDate}"
                        DateSelected="OnDateSelected" />
                </HorizontalStackLayout>
                <Button
                    Text="Convert To Custom Schedule"
                    IsVisible="{Binding WorkoutRoutine.IsScheduleWeekly}"
                    Style="{StaticResource GenericButtonStyle}"
                    Command="{Binding CreateCustomScheduleCommand}"/>
                <Button
                    Text="Convert To Weekly Schedule"
                    IsVisible="{Binding WorkoutRoutine.IsScheduleWeekly, Converter={StaticResource InvertedBoolConverter}}"
                    Style="{StaticResource GenericButtonStyle}"
                    Command="{Binding CreateWeeklyScheduleCommand}"/>
                <Button
                    Text="Change Number Of Days"
                    IsVisible="{Binding WorkoutRoutine.IsScheduleWeekly, Converter={StaticResource InvertedBoolConverter}}"
                    Style="{StaticResource GenericButtonStyle}"
                    Command="{Binding CreateCustomScheduleCommand}"/>
            </VerticalStackLayout>

            <Button 
                Text="Go Back"
                Style="{StaticResource LargeButtonStyle}"
                Command="{Binding GoBackCommand}"
                Margin="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>