                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource AddButtonStyle}"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScheduleViewModel}}, Path=ShowWorkoutTemplateListSidebarCommand}"
