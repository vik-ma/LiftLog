                    Grid.Row="1"
                    ItemsSource="{Binding Day1WorkoutTemplatePackageList}"
                    ItemsLayout="{StaticResource ScheduleCollectionViewItemsLayout}"
                    ItemTemplate="{StaticResource CustomScheduleCollectionViewDataTemplate}">
