<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.WeeklySchedulePage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WeeklyScheduleViewModel"
             Title="Weekly Schedule Page">

    <VerticalStackLayout Padding="6, 10">
        <HorizontalStackLayout Spacing="50">
            <Label 
                Text="Weekly Schedule"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="36" />
            <Label 
                Text="{Binding WeeklySchedule.Id}"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="36" />
        </HorizontalStackLayout>

        <Grid 
            HorizontalOptions="Center"
            ColumnDefinitions="*, *, *"
            RowDefinitions="*, *, *, *, *, *, *, *, *, *, *, *, *, *"
            ColumnSpacing="20"
            RowSpacing="2">
            <Label 
                Text="Monday"
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day1WorkoutTemplateListId}"
                Grid.Row="0"
                Grid.Column="1"
                WidthRequest="150"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day1" />

            <Label 
                Text="Tuesday"
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day2WorkoutTemplateListId}"
                Grid.Row="2"
                Grid.Column="1"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day2" />

            <Label 
                Text="Wednesday"
                Grid.Row="4"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day3WorkoutTemplateListId}"
                Grid.Row="4"
                Grid.Column="1"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="4"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day3" />

            <Label 
                Text="Thursday"
                Grid.Row="6"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day4WorkoutTemplateListId}"
                Grid.Row="6"
                Grid.Column="1"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="6"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day4" />

            <Label 
                Text="Friday"
                Grid.Row="8"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day5WorkoutTemplateListId}"
                Grid.Row="8"
                Grid.Column="1"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="8"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day5" />

            <Label 
                Text="Saturday"
                Grid.Row="10"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day6WorkoutTemplateListId}"
                Grid.Row="10"
                Grid.Column="1"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="10"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day6" />

            <Label 
                Text="Sunday"
                Grid.Row="12"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Text="{Binding WeeklySchedule.Day7WorkoutTemplateListId}"
                Grid.Row="12"
                Grid.Column="1"
                FontSize="20" />
            <Button
                Text="Add"
                Grid.Row="12"
                Grid.Column="2"
                Style="{StaticResource TemplateIdAddButtonStyle}"
                CommandParameter="Day7" />

        </Grid>

        <VerticalStackLayout>
            <Button 
                Text="Go Back"
                Style="{StaticResource RoutineButtonStyle}"
                Command="{Binding GoBackCommand}"
                Margin="50" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>