<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.WeeklySchedulePage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WeeklyScheduleViewModel"
             Title="Weekly Schedule Page">

    <VerticalStackLayout Padding="6, 10">
        <HorizontalStackLayout Spacing="50">
            <Label 
                Text="Weekly Schedule"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="36" />
            <Label 
                Text="{Binding WeeklySchedule.Id}"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="36" />
        </HorizontalStackLayout>

        <Grid 
            HorizontalOptions="Center"
            ColumnDefinitions="*, *, *, *"
            RowDefinitions="*, *, *, *, *, *, *"
            ColumnSpacing="20"
            RowSpacing="2">
            <Label 
                Text="Monday"
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day1TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="0"
                Grid.Column="2"
                WidthRequest="150"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="0"
                Grid.Column="3"
                Style="{StaticResource ScheduleButtonStyle}" />
            
            <Label 
                Text="Tuesday"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day2TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="1"
                Grid.Column="2"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="1"
                Grid.Column="3"
                Style="{StaticResource ScheduleButtonStyle}" />
            
            <Label 
                Text="Wednesday"
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day3TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="2"
                Grid.Column="2"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="2"
                Grid.Column="3"
                Style="{StaticResource ScheduleButtonStyle}" />
            
            <Label 
                Text="Thursday"
                Grid.Row="3"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day4TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="3"
                Grid.Column="2"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="3"
                Grid.Column="3"
                    Style="{StaticResource ScheduleButtonStyle}" />
            
            <Label 
                Text="Friday"
                Grid.Row="4"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day5TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="4"
                Grid.Column="2"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="4"
                Grid.Column="3"
                Style="{StaticResource ScheduleButtonStyle}" />
            
            <Label 
                Text="Saturday"
                Grid.Row="5"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day6TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="5"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="5"
                Grid.Column="2"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="5"
                Grid.Column="3"
                Style="{StaticResource ScheduleButtonStyle}" />
            
            <Label 
                Text="Sunday"
                Grid.Row="6"
                Grid.Column="0"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Label 
                Text="{Binding WeeklySchedule.Day7TemplateId, Converter={StaticResource nullValueToEmptyText}, ConverterParameter=WorkoutID}"
                Grid.Row="6"
                Grid.Column="1"
                Style="{StaticResource ScheduleLabelStyle}" />
            <Entry 
                Grid.Row="6"
                Grid.Column="2"
                FontSize="20" />
            <Button 
                Text="Set" 
                Grid.Row="6"
                Grid.Column="3"
                Style="{StaticResource ScheduleButtonStyle}" />
        </Grid>

        <VerticalStackLayout>
            <Button 
                Text="Go Back"
                Style="{StaticResource RoutineButtonStyle}"
                Command="{Binding GoBackCommand}"
                Margin="50" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>