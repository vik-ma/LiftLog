<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.WeeklySchedulePage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WeeklyScheduleViewModel"
             Title="Weekly Schedule Page">

    <VerticalStackLayout Padding="6, 10">
        <Label 
            Text="Weekly Schedule"
            VerticalOptions="Center"
            FontAttributes="Bold"
            FontSize="36" />
        <VerticalStackLayout
            Margin="10">
            <CollectionView 
                ItemsSource="{Binding ScheduleList}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout 
                        ItemSpacing="3"
                        Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:WeeklySchedule">
                        <Grid 
                            RowDefinitions="Auto, Auto"
                            ColumnDefinitions="*, Auto"
                            Padding="10"
                            BackgroundColor="#ECECEC">
                            <VerticalStackLayout 
                                Grid.Row="0" 
                                Grid.Column="0"
                                Spacing="15">
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span 
                                                Text="Id: " 
                                                FontAttributes="Bold"
                                                Style="{StaticResource RoutineSpanStyle}" />
                                            <Span 
                                                Text="{Binding Id}"
                                                Style="{StaticResource RoutineSpanStyle}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>
                            <VerticalStackLayout
                                Grid.Row="0"
                                Grid.Column="1"
                                Spacing="10"
                                VerticalOptions="Center">
                                <Button 
                                    Text="Edit"
                                    Padding="20, 10"
                                    FontSize="18"
                                    FontAttributes="Bold" />
                                <Button 
                                    Text="Delete"
                                    Padding="20, 10"
                                    FontSize="18"
                                    FontAttributes="Bold" 
                                    BackgroundColor="#ef4444"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:WeeklyScheduleViewModel}}, Path=DeleteScheduleCommand}" 
                                    CommandParameter="{Binding Id}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Label 
                                Text="No Schedules In List!" 
                                FontSize="20" 
                                FontAttributes="Bold" 
                                HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
            
            <Button 
                Text="Create New Schedule"
                Style="{StaticResource MainPageNavigationButtonStyle}"
                Command="{Binding CreateScheduleCommand}" />
        </VerticalStackLayout>

        <CollectionView ItemsSource="{Binding DaysOfWeek.Keys}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid 
                        HorizontalOptions="Center"
                        ColumnDefinitions="*, *, *"
                        RowDefinitions="*, *, *, *, *, *, *"
                        WidthRequest="500"
                        ColumnSpacing="10"
                        RowSpacing="2">
                        <Label 
                            Text="{Binding .}" 
                            Grid.Column="0"
                            Style="{StaticResource ScheduleLabelStyle}" />
                        <Entry 
                            Grid.Column="1"
                                FontSize="20" />
                        <Button 
                            Text="Set" 
                            Grid.Column="2"
                            Style="{StaticResource ScheduleButtonStyle}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        

        <VerticalStackLayout>
            <Button 
                Text="Go Back"
                Style="{StaticResource RoutineButtonStyle}"
                Command="{Binding GoBackCommand}"
                Margin="50" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>