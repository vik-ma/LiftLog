<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLiftLog.Pages.WeeklySchedulePage"
             xmlns:viewmodel="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="viewmodel:WeeklyScheduleViewModel"
             Title="Weekly Schedule Page">

    <VerticalStackLayout Padding="6, 10">
        <HorizontalStackLayout Spacing="50">
            <Label 
                Text="Weekly Schedule"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="36" />
            <Label 
                Text="{Binding WeeklySchedule.Id}"
                VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="36" />
        </HorizontalStackLayout>
        
        <HorizontalStackLayout 
            HorizontalOptions="Center" 
            Spacing="15"
            Margin="10">
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Monday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day1TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Tuesday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day1TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Wednesday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day3TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Thursday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day4TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Friday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day5TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Saturday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day6TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span 
                            Text="Sunday: " 
                            FontAttributes="Bold"
                            Style="{StaticResource RoutineSpanStyle}" />
                        <Span 
                            Text="{Binding WeeklySchedule.Day7TemplateId}"
                            Style="{StaticResource RoutineSpanStyle}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </HorizontalStackLayout>
        
        <CollectionView ItemsSource="{Binding DaysOfWeek}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid 
                        HorizontalOptions="Center"
                        ColumnDefinitions="*, *, *"
                        RowDefinitions="*, *, *, *, *, *, *"
                        WidthRequest="500"
                        ColumnSpacing="10"
                        RowSpacing="2">
                        <Label 
                            Text="{Binding .}"
                            Grid.Column="0"
                            Style="{StaticResource ScheduleLabelStyle}" />
                        <Entry 
                            Grid.Column="1"
                            FontSize="20" />
                        <Button 
                            Text="Set" 
                            Grid.Column="2"
                            Style="{StaticResource ScheduleButtonStyle}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:WeeklyScheduleViewModel}}, Path=ModifyWeeklyScheduleDayCommand}" 
                            CommandParameter="{Binding .}"
                            />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <VerticalStackLayout>
            <Button 
                Text="Go Back"
                Style="{StaticResource RoutineButtonStyle}"
                Command="{Binding GoBackCommand}"
                Margin="50" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>