<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LocalLiftLog.ViewModels"
             xmlns:models="clr-namespace:LocalLiftLog.Models"
             x:DataType="vm:RoutineListViewModel"
             x:Class="LocalLiftLog.MainPage"
             Title="SQLite Db Operations">

    <Grid RowDefinitions="Auto, *">
        <Label 
            Grid.Row="0"
            Text="Routine List"
            FontAttributes="Bold"
            FontSize="18"
            Padding="10"/>
        <Grid 
            Grid.Row="1"
            RowDefinitions="*, Auto">
            <CollectionView 
                Grid.Row="0"
                ItemsSource="{Binding RoutineList}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout 
                        ItemSpacing="10"
                        Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:RoutineList">
                        <Grid RowDefinitions="Auto, Auto"
                              ColumnDefinitions="*, Auto"
                              RowSpacing="5"
                              Padding="5">
                            <Label 
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="{Binding Name}"
                                FontAttributes="Bold" />
                            <Label 
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="{Binding OrderSlot, StringFormat='Order Slot: {0}'}"
                                FontSize="12"
                                FontAttributes="Bold" />

                            <Button 
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="Edit"
                                Padding="0"
                                HeightRequest="25"
                                FontSize="12" />

                            <Button 
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Delete"
                                Padding="0"
                                HeightRequest="25"
                                FontSize="12" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Label 
                                Text="No Routines In List!" 
                                FontSize="18" 
                                FontAttributes="Bold" 
                                HorizontalTextAlignment="Center" />
                            <Label 
                                Text="Create a Routine in the form below." 
                                FontSize="18" 
                                FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>

            <VerticalStackLayout Grid.Row="1">
                <BoxView 
                    Color="{DynamicResource Primary}"
                    HeightRequest="1" />
                <Grid 
                    RowDefinitions="Auto, Auto"
                    ColumnDefinitions="*, Auto"
                    Padding="10"
                    RowSpacing="10"
                    ColumnSpacing="10"
                    BackgroundColor="#CCBFFA" >
                    <VerticalStackLayout 
                        Grid.Row="0"
                        Grid.Column="0">
                        <Label Text="Name" />
                        <Entry 
                            Text="{Binding OperatingRoutineList.Name}"
                            Placeholder="Routine Name"
                            Margin="0" 
                            BackgroundColor="#DAD1F9" />
                    </VerticalStackLayout>
                    <VerticalStackLayout 
                        Grid.Row="0"
                        Grid.Column="1">
                        <Label Text="Order Slot" />
                        <Entry 
                            Text="{Binding OperatingRoutineList.OrderSlot}"
                            Placeholder="Order Slot"
                            Margin="0"
                            BackgroundColor="#DAD1F9"
                            Keyboard="Numeric"
                             />
                    </VerticalStackLayout>

                    <Button 
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="Create Routine"
                        HorizontalOptions="Center"
                        VerticalOptions="End"
                        CornerRadius="4"
                        Padding="50, 0" />
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>
